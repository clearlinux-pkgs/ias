mv %{buildroot}/usr/lib64/pkgconfig/weston.pc %{buildroot}/usr/lib64/pkgconfig/ias.pc
mv %{buildroot}/usr/share/weston/* %{buildroot}/usr/share/ias/

rm %{buildroot}/usr/libexec/weston*

